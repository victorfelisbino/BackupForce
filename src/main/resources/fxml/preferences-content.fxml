<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!-- Preferences Content Panel -->
<VBox xmlns:fx="http://javafx.com/fxml" 
      fx:controller="com.backupforce.ui.PreferencesContentController"
      spacing="0" styleClass="content-area">
    
    <!-- Page Header -->
    <HBox styleClass="status-bar" spacing="12" alignment="CENTER_LEFT">
        <Label text="Preferences" styleClass="page-header-title"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="saveButton" text="Save Changes" onAction="#handleSavePreferences" 
                styleClass="btn btn-accent"/>
    </HBox>
    
    <!-- Main Content -->
    <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" styleClass="scroll-pane">
        <VBox spacing="24">
            <padding><Insets top="24" right="24" bottom="24" left="24"/></padding>
            
            <!-- Appearance Section -->
            <VBox spacing="16" styleClass="panel">
                <Label text="Appearance" styleClass="panel-header"/>
                
                <HBox spacing="16" alignment="CENTER_LEFT">
                    <Label text="Theme:" prefWidth="150"/>
                    <ComboBox fx:id="themeCombo" prefWidth="250"/>
                </HBox>
                
                <HBox spacing="16" alignment="CENTER_LEFT">
                    <Label text="Font Size:" prefWidth="150"/>
                    <ComboBox fx:id="fontSizeCombo" prefWidth="250"/>
                </HBox>
            </VBox>
            
            <!-- Backup Defaults Section -->
            <VBox spacing="16" styleClass="panel">
                <Label text="Backup Defaults" styleClass="panel-header"/>
                
                <HBox spacing="16" alignment="CENTER_LEFT">
                    <Label text="Default Output Format:" prefWidth="150"/>
                    <ComboBox fx:id="outputFormatCombo" prefWidth="250"/>
                </HBox>
                
                <HBox spacing="16" alignment="CENTER_LEFT">
                    <Label text="Default Backup Location:" prefWidth="150"/>
                    <TextField fx:id="defaultBackupPath" prefWidth="200" HBox.hgrow="ALWAYS"/>
                    <Button text="Browse..." onAction="#handleBrowseBackupPath" styleClass="btn"/>
                </HBox>
                
                <HBox spacing="16" alignment="CENTER_LEFT">
                    <Label text="Parallel Threads:" prefWidth="150"/>
                    <Spinner fx:id="threadSpinner" prefWidth="100" min="1" max="15" initialValue="15">
                        <tooltip>
                            <Tooltip text="Number of concurrent backup threads (1-15). Salesforce allows 100 concurrent Bulk API jobs per org. Default: 5" wrapText="true" maxWidth="300"/>
                        </tooltip>
                    </Spinner>
                    <Label text="(1-15, Salesforce org limit: 100 concurrent jobs)" styleClass="hint-label"/>
                </HBox>
                
                <HBox spacing="16" alignment="CENTER_LEFT">
                    <CheckBox fx:id="includeArchivedCheck" text="Include archived records by default"/>
                </HBox>
                
                <HBox spacing="16" alignment="CENTER_LEFT">
                    <CheckBox fx:id="downloadBlobsCheck" text="Download blob/file fields by default"/>
                </HBox>
                
                <HBox spacing="16" alignment="CENTER_LEFT">
                    <CheckBox fx:id="verifyAfterBackupCheck" text="Verify backup after completion by default"/>
                </HBox>
            </VBox>
            
            <!-- Object Category Filters Section -->
            <VBox spacing="16" styleClass="panel">
                <Label text="Object Categories to Include" styleClass="panel-header"/>
                <Label text="Choose which types of Salesforce objects to include in backups. Unselected categories will be excluded from the object list." styleClass="hint-label" wrapText="true"/>
                
                <HBox spacing="16" alignment="CENTER_LEFT">
                    <CheckBox fx:id="includeApexCodeCheck" text="Apex Code (ApexClass, ApexTrigger, ApexComponent, ApexPage)">
                        <tooltip>
                            <Tooltip text="Include your Apex classes, triggers, Visualforce pages and components. Recommended: Keep this ON to backup your custom code." wrapText="true" maxWidth="350"/>
                        </tooltip>
                    </CheckBox>
                </HBox>
                
                <HBox spacing="16" alignment="CENTER_LEFT">
                    <CheckBox fx:id="includeApexLogsCheck" text="Apex Logs &amp; Test Results (ApexLog, ApexTestResult, etc.)">
                        <tooltip>
                            <Tooltip text="Include debug logs, test results, and execution data. These are transient and regenerated often. Default: OFF" wrapText="true" maxWidth="350"/>
                        </tooltip>
                    </CheckBox>
                </HBox>
                
                <HBox spacing="16" alignment="CENTER_LEFT">
                    <CheckBox fx:id="includeFeedObjectsCheck" text="Feed Objects (Chatter posts: AccountFeed, CaseFeed, etc.)">
                        <tooltip>
                            <Tooltip text="Include Chatter feed posts and comments attached to records. Can be very large in active orgs. Default: OFF" wrapText="true" maxWidth="350"/>
                        </tooltip>
                    </CheckBox>
                </HBox>
                
                <HBox spacing="16" alignment="CENTER_LEFT">
                    <CheckBox fx:id="includeHistoryObjectsCheck" text="History Objects (Field tracking: AccountHistory, OpportunityHistory, etc.)">
                        <tooltip>
                            <Tooltip text="Include field history tracking records. Useful for audit trails but can be very large. Default: OFF" wrapText="true" maxWidth="350"/>
                        </tooltip>
                    </CheckBox>
                </HBox>
                
                <HBox spacing="16" alignment="CENTER_LEFT">
                    <CheckBox fx:id="includeShareObjectsCheck" text="Share Objects (Sharing entries: AccountShare, CaseShare, etc.)">
                        <tooltip>
                            <Tooltip text="Include manual sharing entries. These are auto-managed by Salesforce sharing rules and can be regenerated. Default: OFF" wrapText="true" maxWidth="350"/>
                        </tooltip>
                    </CheckBox>
                </HBox>
                
                <HBox spacing="16" alignment="CENTER_LEFT">
                    <CheckBox fx:id="includeSetupObjectsCheck" text="Setup/Config Objects (SetupAuditTrail, PermissionSet, etc.)">
                        <tooltip>
                            <Tooltip text="Include setup and configuration objects. For complete org config backup, use Salesforce Metadata API instead. Default: OFF" wrapText="true" maxWidth="350"/>
                        </tooltip>
                    </CheckBox>
                </HBox>
                
                <HBox spacing="16" alignment="CENTER_LEFT">
                    <CheckBox fx:id="includeManagedPkgCheck" text="Managed Package Objects (installed AppExchange packages)">
                        <tooltip>
                            <Tooltip text="Include data from installed managed packages (objects with namespace prefixes like 'SBQQ__'). Default: ON" wrapText="true" maxWidth="350"/>
                        </tooltip>
                    </CheckBox>
                </HBox>
            </VBox>
            
            <!-- Restore Defaults Section -->
            <VBox spacing="16" styleClass="panel">
                <Label text="Restore Defaults" styleClass="panel-header"/>
                
                <HBox spacing="16" alignment="CENTER_LEFT">
                    <Label text="Default Operation:" prefWidth="150"/>
                    <ComboBox fx:id="restoreOpCombo" prefWidth="250"/>
                </HBox>
                
                <HBox spacing="16" alignment="CENTER_LEFT">
                    <Label text="Batch Size:" prefWidth="150"/>
                    <Spinner fx:id="batchSpinner" prefWidth="100" min="1" max="2000" initialValue="200"/>
                </HBox>
                
                <HBox spacing="16" alignment="CENTER_LEFT">
                    <CheckBox fx:id="validateBeforeRestoreCheck" text="Always validate data before restore"/>
                </HBox>
            </VBox>
            
            <!-- Notifications Section -->
            <VBox spacing="16" styleClass="panel">
                <Label text="Notifications" styleClass="panel-header"/>
                
                <HBox spacing="16" alignment="CENTER_LEFT">
                    <CheckBox fx:id="notifyCompleteCheck" text="Show notification when backup/restore completes"/>
                </HBox>
                
                <HBox spacing="16" alignment="CENTER_LEFT">
                    <CheckBox fx:id="notifyErrorCheck" text="Show notification on errors"/>
                </HBox>
                
                <HBox spacing="16" alignment="CENTER_LEFT">
                    <CheckBox fx:id="playSoundCheck" text="Play sound on completion"/>
                </HBox>
            </VBox>
            
            <!-- Advanced Section -->
            <VBox spacing="16" styleClass="panel">
                <Label text="Advanced" styleClass="panel-header"/>
                
                <HBox spacing="16" alignment="CENTER_LEFT">
                    <Label text="API Timeout (seconds):" prefWidth="150"/>
                    <Spinner fx:id="timeoutSpinner" prefWidth="100" min="30" max="600" initialValue="120"/>
                </HBox>
                
                <HBox spacing="16" alignment="CENTER_LEFT">
                    <Label text="Log Level:" prefWidth="150"/>
                    <ComboBox fx:id="logLevelCombo" prefWidth="250"/>
                </HBox>
                
                <HBox spacing="16" alignment="CENTER_LEFT">
                    <CheckBox fx:id="enableMetricsCheck" text="Enable performance metrics collection"/>
                </HBox>
            </VBox>
            
            <!-- Reset Section -->
            <HBox spacing="16" alignment="CENTER_LEFT">
                <Button text="Reset to Defaults" onAction="#handleResetDefaults" styleClass="btn"/>
            </HBox>
            
        </VBox>
    </ScrollPane>
</VBox>

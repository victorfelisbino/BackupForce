<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" 
      fx:controller="com.backupforce.ui.DatabaseSettingsController"
      prefWidth="550" prefHeight="500" 
      styleClass="root" 
      spacing="20"
      stylesheets="@../css/vscode-dark.css">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    
    <Label text="Database Connection Settings" styleClass="header-label"/>
    
    <!-- Database Type Selection -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Database Type:" minWidth="120"/>
        <ComboBox fx:id="databaseTypeCombo" prefWidth="300" 
                  promptText="Select database type"/>
    </HBox>
    
    <Separator/>
    
    <GridPane fx:id="settingsGrid" hgap="10" vgap="15">
        <columnConstraints>
            <ColumnConstraints minWidth="120" prefWidth="120"/>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>
        
        <!-- Dynamic fields will be added based on database type -->
        
    </GridPane>
    
    <!-- Backup Options -->
    <Separator/>
    <VBox spacing="8">
        <Label text="Backup Options" styleClass="section-label"/>
        <CheckBox fx:id="recreateTablesCheckBox" text="Drop and recreate tables (full reload)"/>
        <Label text="âš  Warning: This will delete existing data in the target tables" 
               style="-fx-text-fill: #ff9800; -fx-font-size: 11px; -fx-padding: 0 0 0 24;"/>
    </VBox>
    
    <!-- Connection Management -->
    <Separator/>
    <VBox spacing="8">
        <Label text="Connection Management" styleClass="section-label"/>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Connection Name:" minWidth="120"/>
            <TextField fx:id="connectionNameField" promptText="e.g., Production Snowflake" 
                      HBox.hgrow="ALWAYS" 
                      style="-fx-font-size: 13px;"/>
        </HBox>
        <CheckBox fx:id="rememberCheckBox" text="Save this connection for quick access"/>
    </VBox>
    
    <HBox spacing="10" alignment="CENTER">
        <Button text="Test Connection" onAction="#handleTestConnection" 
                styleClass="secondary-button" prefWidth="140"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Save As New" onAction="#handleSaveAs" 
                styleClass="accent-button" prefWidth="120"
                style="-fx-background-color: #2196F3;"/>
        <Button text="Save" onAction="#handleSave" 
                styleClass="primary-button" prefWidth="100"/>
        <Button text="Cancel" onAction="#handleCancel" 
                styleClass="secondary-button" prefWidth="100"/>
    </HBox>
    
    <Label fx:id="statusLabel" styleClass="status-label" wrapText="true"/>
    
</VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" 
      fx:controller="com.backupforce.ui.DatabaseSettingsController"
      prefWidth="550" prefHeight="520" 
      styleClass="root dialog-container" 
      spacing="20"
      stylesheets="@../css/backupforce-modern.css">
    
    <padding>
        <Insets top="24" right="24" bottom="24" left="24"/>
    </padding>
    
    <Label text="Database Connection Settings" styleClass="panel-header"/>
    
    <!-- Database Type Selection -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Database Type:" styleClass="field-label"/>
        <ComboBox fx:id="databaseTypeCombo" prefWidth="300" styleClass="modern-combo"
                  promptText="Select database type"/>
    </HBox>
    
    <Separator styleClass="separator"/>
    
    <GridPane fx:id="settingsGrid" hgap="12" vgap="14">
        <columnConstraints>
            <ColumnConstraints minWidth="120" prefWidth="120"/>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>
        
        <!-- Dynamic fields will be added based on database type -->
        
    </GridPane>
    
    <!-- Backup Options -->
    <Separator styleClass="separator"/>
    <VBox spacing="10">
        <Label text="Backup Options" styleClass="panel-header"/>
        <CheckBox fx:id="recreateTablesCheckBox" text="Drop and recreate tables (full reload)"/>
        <Label text="âš  Warning: This will delete existing data in the target tables" 
               styleClass="status-text" style="-fx-font-size: 11px;"/>
    </VBox>
    
    <!-- Connection Management -->
    <Separator styleClass="separator"/>
    <VBox spacing="10">
        <Label text="Connection Management" styleClass="section-label"/>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Connection Name:" styleClass="field-label"/>
            <TextField fx:id="connectionNameField" promptText="e.g., Production Snowflake" 
                      HBox.hgrow="ALWAYS" styleClass="modern-text-field"/>
        </HBox>
        <CheckBox fx:id="rememberCheckBox" text="Save this connection for quick access" styleClass="modern-checkbox"/>
    </VBox>
    
    <Region VBox.vgrow="ALWAYS"/>
    
    <HBox spacing="12" alignment="CENTER">
        <Button text="Test Connection" onAction="#handleTestConnection" 
                styleClass="btn btn-secondary" prefWidth="140"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Save As New" onAction="#handleSaveAs" 
                styleClass="btn btn-secondary" prefWidth="120"/>
        <Button text="Save" onAction="#handleSave" 
                styleClass="btn btn-primary" prefWidth="100"/>
        <Button text="Cancel" onAction="#handleCancel" 
                styleClass="btn btn-secondary" prefWidth="100"/>
    </HBox>
    
    <Label fx:id="statusLabel" wrapText="true" style="-fx-padding: 8 0 0 0;"/>
    
</VBox>

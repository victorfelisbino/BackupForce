<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns:fx="http://javafx.com/fxml" 
      fx:controller="com.backupforce.ui.LoginController"
      spacing="24" alignment="CENTER" styleClass="login-container"
      stylesheets="@../css/windows11-dark.css"
      style="-fx-background-color: #1a1a1a;">
    
    <padding>
        <Insets top="50" right="50" bottom="50" left="50"/>
    </padding>
    
    <!-- Header -->
    <VBox spacing="8" alignment="CENTER" style="-fx-padding: 0 0 8 0;">
        <Label text="BackupForce" styleClass="app-logo" style="-fx-font-size: 32px;"/>
        <Label text="Salesforce Backup Tool" styleClass="page-subtitle"/>
    </VBox>
    
    <!-- Login Form -->
    <VBox spacing="16" styleClass="section-panel" style="-fx-padding: 28px; -fx-max-width: 420px;">
        
        <!-- Saved Credentials Section -->
        <VBox spacing="10" fx:id="savedCredentialsSection">
            <Label text="Saved Credentials" styleClass="section-label"/>
            <ListView fx:id="savedCredentialsList" maxHeight="120" styleClass="modern-list"/>
            <Separator style="-fx-padding: 8 0; -fx-background-color: #333333;"/>
        </VBox>
        
        <VBox spacing="8">
            <Label text="Username" styleClass="field-label"/>
            <TextField fx:id="usernameField" promptText="your.email@company.com" 
                      styleClass="modern-text-field"/>
        </VBox>
        
        <VBox spacing="8">
            <Label text="Password" styleClass="field-label"/>
            <PasswordField fx:id="passwordField" promptText="Your Salesforce password" 
                          styleClass="modern-text-field"/>
        </VBox>
        
        <VBox spacing="8">
            <Label text="Security Token" styleClass="field-label"/>
            <PasswordField fx:id="tokenField" promptText="Leave empty if IP is whitelisted" 
                          styleClass="modern-text-field"/>
        </VBox>
        
        <VBox spacing="8">
            <Label text="Environment" styleClass="field-label"/>
            <ComboBox fx:id="environmentCombo" maxWidth="Infinity" styleClass="modern-combo"/>
            <Label fx:id="environmentUrlLabel" text="" styleClass="caption" 
                   style="-fx-padding: 2 0 0 4;"/>
        </VBox>
        
        <CheckBox fx:id="rememberCredentialsCheckBox" text="Remember credentials" 
                  styleClass="modern-checkbox" style="-fx-padding: 8 0 4 0;"/>
        
        <Button fx:id="loginButton" text="Login to Salesforce" onAction="#handleLogin" 
                maxWidth="Infinity" styleClass="primary-button"
                style="-fx-padding: 12px; -fx-font-size: 14px;"/>
        
        <!-- OR Separator -->
        <HBox spacing="12" alignment="CENTER" style="-fx-padding: 8 0;">
            <Separator HBox.hgrow="ALWAYS" style="-fx-background-color: #333333;"/>
            <Label text="OR" styleClass="caption" style="-fx-font-weight: 500;"/>
            <Separator HBox.hgrow="ALWAYS" style="-fx-background-color: #333333;"/>
        </HBox>
        
        <!-- OAuth Login Button -->
        <Button fx:id="oauthButton" text="ðŸ”’ Login with Browser (OAuth)" onAction="#handleOAuthLogin" 
                maxWidth="Infinity" styleClass="secondary-button"
                style="-fx-padding: 12px; -fx-font-size: 14px;"/>
        
        <!-- Cancel Button (shown during OAuth) -->
        <Button fx:id="cancelButton" text="Cancel" onAction="#handleCancelOAuth" 
                maxWidth="Infinity" styleClass="secondary-button" visible="false" managed="false"
                style="-fx-padding: 10px; -fx-font-size: 13px;"/>
        
        <HBox spacing="12" alignment="CENTER" style="-fx-padding: 8 0 0 0;">
            <ProgressIndicator fx:id="progressIndicator" prefWidth="20" prefHeight="20"/>
            <Label fx:id="statusLabel" text="" wrapText="true" textAlignment="CENTER"
                   style="-fx-max-width: 350px;"/>
        </HBox>
        
        <!-- OAuth timeout countdown -->
        <Label fx:id="timeoutLabel" text="" styleClass="caption" visible="false" managed="false"
               style="-fx-text-fill: #888;"/>
    </VBox>
    
    <!-- Footer -->
    <VBox spacing="12" alignment="CENTER" style="-fx-padding: 8 0 0 0;">
        <Label text="Security token not needed if your IP is whitelisted in Setup â†’ Network Access â†’ Trusted IP Ranges" 
               wrapText="true" textAlignment="CENTER" styleClass="caption"
               style="-fx-max-width: 420px;"/>
        <Label text="Developed by Victor Felisbino" styleClass="version-text"
              style="-fx-padding: 4 0 0 0;"/>
    </VBox>
</VBox>

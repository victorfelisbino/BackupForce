<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns:fx="http://javafx.com/fxml" 
      fx:controller="com.backupforce.ui.BackupController"
      styleClass="mica-background"
      stylesheets="@../css/windows11-dark.css"
      spacing="0">
    
    <!-- Top: Header Bar -->
    <HBox spacing="12" alignment="CENTER_LEFT" styleClass="header-section" style="-fx-padding: 14px 20px;">
        <Region styleClass="connection-status-dot"/>
        <Label fx:id="connectionLabel" text="Connected to Salesforce" styleClass="connection-label" HBox.hgrow="ALWAYS"/>
        <Button fx:id="logoutButton" text="Logout" onAction="#handleLogout" 
               styleClass="secondary-button" style="-fx-padding: 7px 18px; -fx-font-size: 13px;"/>
    </HBox>
    
    <!-- Main Content: Horizontal Split -->
    <SplitPane dividerPositions="0.5" VBox.vgrow="ALWAYS" style="-fx-padding: 0;">
        
        <!-- LEFT PANEL: Object Tables and Tabs -->
        <VBox spacing="14" style="-fx-padding: 16px 12px 16px 16px;">
            
            <!-- Search and Selection Bar -->
            <HBox spacing="12" alignment="CENTER_LEFT" style="-fx-padding: 0 4px;">
                <TextField fx:id="searchField" promptText="Search objects..." 
                          HBox.hgrow="ALWAYS" styleClass="search-field" style="-fx-font-size: 13px;"/>
                <Label fx:id="selectionCountLabel" text="0 objects selected" 
                       styleClass="caption" style="-fx-padding: 0 6px; -fx-font-size: 12px;"/>
            </HBox>
            
            <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding: 0 4px;">
                <Button fx:id="selectAllButton" text="Select All" onAction="#handleSelectAll" 
                       styleClass="secondary-button" style="-fx-padding: 6px 16px; -fx-font-size: 13px;"/>
                <Button fx:id="deselectAllButton" text="Clear" onAction="#handleDeselectAll" 
                       styleClass="secondary-button" style="-fx-padding: 6px 16px; -fx-font-size: 13px;"/>
            </HBox>
            
            <!-- Object Selection Table (before backup) -->
            <TableView fx:id="allObjectsTable" VBox.vgrow="ALWAYS" styleClass="modern-table">
                <columns>
                    <TableColumn fx:id="allSelectColumn" text="Select" prefWidth="50" 
                                minWidth="50" maxWidth="50"/>
                    <TableColumn fx:id="allNameColumn" text="API Name" prefWidth="180" 
                                minWidth="120"/>
                    <TableColumn fx:id="allLabelColumn" text="Label" prefWidth="180" 
                                minWidth="120"/>
                    <TableColumn fx:id="allStatusColumn" text="Status" prefWidth="150" 
                                minWidth="100"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
            
            <!-- Status Tabs (shown during/after backup) -->
            <TabPane fx:id="statusTabPane" VBox.vgrow="ALWAYS" tabClosingPolicy="UNAVAILABLE" 
                     visible="false" managed="false">
                <Tab text="All Objects" closable="false">
                    <TableView fx:id="allStatusTable">
                        <columns>
                            <TableColumn fx:id="statusAllNameColumn" text="Object" prefWidth="160" 
                                        minWidth="120"/>
                            <TableColumn fx:id="statusAllLabelColumn" text="Label" prefWidth="160" 
                                        minWidth="120"/>
                            <TableColumn fx:id="statusAllStatusColumn" text="Status" prefWidth="250" 
                                        minWidth="180"/>
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                        </columnResizePolicy>
                    </TableView>
                </Tab>
                
                <Tab text="In Progress" closable="false">
                    <TableView fx:id="inProgressTable">
                        <columns>
                            <TableColumn fx:id="progressNameColumn" text="Object" prefWidth="180" 
                                        minWidth="140"/>
                            <TableColumn fx:id="progressStatusColumn" text="Status" prefWidth="350" 
                                        minWidth="200"/>
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                        </columnResizePolicy>
                    </TableView>
                </Tab>
                
                <Tab text="Completed" closable="false">
                    <TableView fx:id="completedTable">
                        <columns>
                            <TableColumn fx:id="completedNameColumn" text="Object" prefWidth="160" 
                                        minWidth="120"/>
                            <TableColumn fx:id="completedRecordsColumn" text="Records" prefWidth="100" 
                                        minWidth="80"/>
                            <TableColumn fx:id="completedSizeColumn" text="Size" prefWidth="90" 
                                        minWidth="70"/>
                            <TableColumn fx:id="completedTimeColumn" text="Time" prefWidth="90" 
                                        minWidth="70"/>
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                        </columnResizePolicy>
                    </TableView>
                </Tab>
                
                <Tab text="Errors" closable="false">
                    <TableView fx:id="errorsTable">
                        <columns>
                            <TableColumn fx:id="errorNameColumn" text="Object" prefWidth="160" 
                                        minWidth="120"/>
                            <TableColumn fx:id="errorMessageColumn" text="Error" prefWidth="380" 
                                        minWidth="200"/>
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                        </columnResizePolicy>
                    </TableView>
                </Tab>
            </TabPane>
        </VBox>
        
        <!-- RIGHT PANEL: Configuration and Logs -->
        <VBox spacing="14" style="-fx-padding: 16px 16px 16px 12px;">
            
            <!-- Backup Target Selection -->
            <VBox spacing="12" styleClass="config-card">
                <Label text="Backup Destination" styleClass="section-label"/>
                
                <HBox spacing="24" alignment="CENTER_LEFT" style="-fx-padding: 4 0 0 0;">
                    <RadioButton fx:id="csvRadioButton" text="CSV Files" selected="true" 
                                styleClass="modern-radio">
                        <toggleGroup>
                            <ToggleGroup fx:id="backupTargetGroup"/>
                        </toggleGroup>
                    </RadioButton>
                    <RadioButton fx:id="databaseRadioButton" text="Database" 
                                toggleGroup="$backupTargetGroup" styleClass="modern-radio"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button fx:id="databaseSettingsButton" text="⚙ Database Settings" 
                           onAction="#handleDatabaseSettings" 
                           styleClass="secondary-button" disable="true"
                           style="-fx-padding: 6px 14px; -fx-font-size: 13px;"/>
                </HBox>
            </VBox>
            
            <!-- Output Folder Selection -->
            <VBox spacing="10" styleClass="config-card" fx:id="outputFolderBox">
                <Label text="Output Folder" styleClass="section-label"/>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <TextField fx:id="outputFolderField" HBox.hgrow="ALWAYS" 
                              styleClass="modern-text-field"
                              promptText="Select backup destination folder..."/>
                    <Button fx:id="browseButton" text="Browse" onAction="#handleBrowse" 
                           styleClass="secondary-button"
                           style="-fx-padding: 8px 16px; -fx-font-size: 13px;"/>
                </HBox>
            </VBox>
            
            <!-- Progress Section -->
            <VBox spacing="10" styleClass="progress-card">
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label fx:id="progressLabel" text="Ready to start backup" styleClass="progress-label" 
                           HBox.hgrow="ALWAYS"/>
                    <Label fx:id="progressPercentLabel" text="0%" styleClass="progress-percent"/>
                </HBox>
                <ProgressBar fx:id="progressBar" maxWidth="Infinity" prefHeight="6" 
                            styleClass="modern-progress" progress="0"/>
            </VBox>
            
            <!-- Action Buttons -->
            <HBox spacing="12" alignment="CENTER_RIGHT" style="-fx-padding: 8 0 0 0;">
                <Button fx:id="startBackupButton" text="Start Backup" onAction="#handleStartBackup" 
                       prefWidth="160" prefHeight="38" styleClass="primary-button"
                       style="-fx-font-size: 14px; -fx-font-weight: 600;"/>
                <Button fx:id="stopBackupButton" text="Stop Backup" onAction="#handleStopBackup" 
                       prefWidth="160" prefHeight="38" styleClass="danger-button"
                       style="-fx-font-size: 14px; -fx-font-weight: 600;"/>
                <Button fx:id="exportResultsButton" text="Export Results" onAction="#handleExportResults" 
                       prefWidth="160" prefHeight="38" styleClass="success-button" disable="true"
                       style="-fx-font-size: 14px; -fx-font-weight: 600;"/>
            </HBox>
            
            <!-- Activity Log (TALL - grows to fill remaining space) -->
            <VBox spacing="10" styleClass="config-card" VBox.vgrow="ALWAYS">
                <Label text="Activity Log" styleClass="section-label"/>
                <TextArea fx:id="logArea" editable="false" wrapText="true" 
                         styleClass="log-area" VBox.vgrow="ALWAYS"
                         style="-fx-min-height: 300px;">
                    <font>
                        <Font name="Consolas" size="11"/>
                    </font>
                </TextArea>
            </VBox>
            
            <!-- Attribution Footer -->
            <HBox alignment="CENTER" style="-fx-padding: 16 0 0 0;">
                <Label text="Developed by Victor Felisbino • BackupForce v2.0" 
                      style="-fx-font-size: 11px; -fx-text-fill: #8b8b8b;"/>
            </HBox>
        </VBox>
    </SplitPane>
    
</VBox>

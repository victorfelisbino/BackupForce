<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" 
            fx:controller="com.backupforce.ui.BackupController"
            styleClass="backup-container">
    
    <!-- Top Section: Connection Info -->
    <top>
        <VBox spacing="10" styleClass="header-section">
            <padding>
                <Insets top="15" right="15" bottom="10" left="15"/>
            </padding>
            <Label fx:id="connectionLabel" text="Connected to: " styleClass="connection-label">
                <font>
                    <Font size="12"/>
                </font>
            </Label>
            <Separator/>
        </VBox>
    </top>
    
    <!-- Center: Object Selection and Status -->
    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="15" bottom="10" left="15"/>
            </padding>
            
            <!-- Search and Selection Controls -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <TextField fx:id="searchField" promptText="Search objects..." 
                          prefWidth="300" styleClass="search-field"/>
                <Label fx:id="selectionCountLabel" text="0 selected" 
                       style="-fx-font-size: 12px; -fx-text-fill: #666;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button fx:id="selectAllButton" text="Select All" onAction="#handleSelectAll" 
                       styleClass="secondary-button"/>
                <Button fx:id="deselectAllButton" text="Deselect All" onAction="#handleDeselectAll" 
                       styleClass="secondary-button"/>
            </HBox>
            
            <!-- Selection Table (shown before backup) -->
            <TableView fx:id="allObjectsTable" VBox.vgrow="ALWAYS" styleClass="object-table">
                <columns>
                    <TableColumn fx:id="allSelectColumn" text="Select" prefWidth="60" 
                                minWidth="60" maxWidth="60"/>
                    <TableColumn fx:id="allNameColumn" text="Object Name" prefWidth="200" 
                                minWidth="150"/>
                    <TableColumn fx:id="allLabelColumn" text="Label" prefWidth="200" 
                                minWidth="150"/>
                    <TableColumn fx:id="allStatusColumn" text="Status" prefWidth="250" 
                                minWidth="150"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
            
            <!-- Status Tabs (shown during/after backup) -->
            <TabPane fx:id="statusTabPane" VBox.vgrow="ALWAYS" tabClosingPolicy="UNAVAILABLE" 
                     style="-fx-background-color: white; -fx-border-color: #e0e0e0; -fx-border-radius: 8px;"
                     visible="false" managed="false">
                <!-- All Objects Tab -->
                <Tab text="All" style="-fx-background-color: white;">
                    <TableView fx:id="allStatusTable" styleClass="object-table">
                        <columns>
                            <TableColumn fx:id="statusAllNameColumn" text="Object Name" prefWidth="200" 
                                        minWidth="150"/>
                            <TableColumn fx:id="statusAllLabelColumn" text="Label" prefWidth="200" 
                                        minWidth="150"/>
                            <TableColumn fx:id="statusAllStatusColumn" text="Status" prefWidth="250" 
                                        minWidth="150"/>
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                        </columnResizePolicy>
                    </TableView>
                </Tab>
                
                <!-- In Progress Tab -->
                <Tab text="In Progress" style="-fx-background-color: #e3f2fd;">
                    <TableView fx:id="inProgressTable" styleClass="object-table">
                        <columns>
                            <TableColumn fx:id="progressNameColumn" text="Object Name" prefWidth="200" 
                                        minWidth="150"/>
                            <TableColumn fx:id="progressStatusColumn" text="Status" prefWidth="300" 
                                        minWidth="200"/>
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                        </columnResizePolicy>
                    </TableView>
                </Tab>
                
                <!-- Completed Tab -->
                <Tab text="Completed" style="-fx-background-color: #e8f5e9;">
                    <TableView fx:id="completedTable" styleClass="object-table">
                        <columns>
                            <TableColumn fx:id="completedNameColumn" text="Object Name" prefWidth="200" 
                                        minWidth="150"/>
                            <TableColumn fx:id="completedRecordsColumn" text="Records" prefWidth="100" 
                                        minWidth="80"/>
                            <TableColumn fx:id="completedSizeColumn" text="File Size" prefWidth="100" 
                                        minWidth="80"/>
                            <TableColumn fx:id="completedTimeColumn" text="Duration" prefWidth="100" 
                                        minWidth="80"/>
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                        </columnResizePolicy>
                    </TableView>
                </Tab>
                
                <!-- Errors Tab -->
                <Tab text="Errors" style="-fx-background-color: #ffebee;">
                    <TableView fx:id="errorsTable" styleClass="object-table">
                        <columns>
                            <TableColumn fx:id="errorNameColumn" text="Object Name" prefWidth="200" 
                                        minWidth="150"/>
                            <TableColumn fx:id="errorMessageColumn" text="Error Message" prefWidth="400" 
                                        minWidth="200"/>
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                        </columnResizePolicy>
                    </TableView>
                </Tab>
            </TabPane>
        </VBox>
    </center>
    
    <!-- Bottom: Output Folder, Progress, and Controls -->
    <bottom>
        <VBox spacing="15" styleClass="bottom-section">
            <padding>
                <Insets top="10" right="15" bottom="15" left="15"/>
            </padding>
            
            <Separator/>
            
            <!-- Output Folder Selection -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Output Folder:" styleClass="form-label">
                    <font>
                        <Font size="12"/>
                    </font>
                </Label>
                <TextField fx:id="outputFolderField" HBox.hgrow="ALWAYS" 
                          styleClass="form-field"/>
                <Button fx:id="browseButton" text="Browse..." onAction="#handleBrowse" 
                       styleClass="secondary-button"/>
            </HBox>
            
            <!-- Progress Section -->
            <VBox spacing="8">
                <Label fx:id="progressLabel" text="Ready" styleClass="progress-label">
                    <font>
                        <Font size="12"/>
                    </font>
                </Label>
                <ProgressBar fx:id="progressBar" maxWidth="Infinity" prefHeight="25" 
                            styleClass="progress-bar"/>
            </VBox>
            
            <!-- Action Buttons -->
            <HBox spacing="10" alignment="CENTER">
                <Button fx:id="startBackupButton" text="Start Backup" onAction="#handleStartBackup" 
                       prefWidth="150" styleClass="primary-button">
                    <font>
                        <Font size="14"/>
                    </font>
                </Button>
                <Button fx:id="stopBackupButton" text="Stop Backup" onAction="#handleStopBackup" 
                       prefWidth="150" styleClass="danger-button">
                    <font>
                        <Font size="14"/>
                    </font>
                </Button>
            </HBox>
            
            <!-- Log Area -->
            <VBox spacing="5">
                <Label text="Log:" styleClass="form-label">
                    <font>
                        <Font size="12"/>
                    </font>
                </Label>
                <TextArea fx:id="logArea" prefHeight="120" editable="false" 
                         wrapText="true" styleClass="log-area">
                    <font>
                        <Font name="Consolas" size="11"/>
                    </font>
                </TextArea>
            </VBox>
        </VBox>
    </bottom>
    
</BorderPane>

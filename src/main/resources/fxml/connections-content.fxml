<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!-- Connections Management Content Panel -->
<VBox xmlns:fx="http://javafx.com/fxml" 
      fx:controller="com.backupforce.ui.ConnectionsContentController"
      spacing="0" styleClass="content-area">
    
    <!-- Page Header -->
    <HBox styleClass="status-bar" spacing="12" alignment="CENTER_LEFT">
        <Label text="Database Connections" styleClass="page-header-title"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="addConnectionButton" text="+ Add Connection" onAction="#handleAddConnection" 
                styleClass="btn btn-accent"/>
    </HBox>
    
    <!-- Main Content -->
    <VBox spacing="24" VBox.vgrow="ALWAYS">
        <padding><Insets top="24" right="24" bottom="24" left="24"/></padding>
        
        <!-- Info Banner -->
        <HBox spacing="12" styleClass="callout callout-info" alignment="CENTER_LEFT">
            <Label text="â„¹ï¸" style="-fx-font-size: 20px;"/>
            <VBox spacing="4" HBox.hgrow="ALWAYS">
                <Label text="Database Connections" styleClass="callout-title"/>
                <Label text="Manage connections to external databases for backup storage. Supports Snowflake, PostgreSQL, SQL Server, and MySQL." 
                       styleClass="callout-text" wrapText="true"/>
            </VBox>
        </HBox>
        
        <!-- Connections List -->
        <VBox spacing="12" VBox.vgrow="ALWAYS">
            <Label text="Saved Connections" styleClass="panel-header"/>
            
            <TableView fx:id="connectionsTable" VBox.vgrow="ALWAYS" styleClass="data-table">
                <columns>
                    <TableColumn fx:id="nameColumn" text="Name" prefWidth="180" minWidth="120"/>
                    <TableColumn fx:id="typeColumn" text="Type" prefWidth="100" minWidth="80"/>
                    <TableColumn fx:id="databaseColumn" text="Database" prefWidth="150" minWidth="100"/>
                    <TableColumn fx:id="schemaColumn" text="Schema" prefWidth="120" minWidth="80"/>
                    <TableColumn fx:id="usernameColumn" text="Username" prefWidth="150" minWidth="100"/>
                    <TableColumn fx:id="statusColumn" text="Status" prefWidth="100" minWidth="80"/>
                    <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="150" minWidth="120"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
                <placeholder>
                    <VBox alignment="CENTER" spacing="16">
                        <Label text="ðŸ”—" style="-fx-font-size: 48px; -fx-text-fill: #8b949e;"/>
                        <Label text="No connections configured" styleClass="status-text"/>
                        <Label text="Click 'Add Connection' to create your first database connection" 
                               styleClass="form-hint"/>
                    </VBox>
                </placeholder>
            </TableView>
        </VBox>
        
        <!-- Quick Help -->
        <VBox spacing="12" styleClass="panel">
            <Label text="Supported Databases" styleClass="panel-header"/>
            <HBox spacing="24">
                <VBox spacing="4" HBox.hgrow="ALWAYS">
                    <HBox spacing="8" alignment="CENTER_LEFT">
                        <Label text="â„ï¸" style="-fx-font-size: 16px;"/>
                        <Label text="Snowflake" style="-fx-font-weight: 600;"/>
                    </HBox>
                    <Label text="Cloud data warehouse with SSO support" styleClass="form-hint"/>
                </VBox>
                <VBox spacing="4" HBox.hgrow="ALWAYS">
                    <HBox spacing="8" alignment="CENTER_LEFT">
                        <Label text="ðŸ˜" style="-fx-font-size: 16px;"/>
                        <Label text="PostgreSQL" style="-fx-font-weight: 600;"/>
                    </HBox>
                    <Label text="Open source relational database" styleClass="form-hint"/>
                </VBox>
                <VBox spacing="4" HBox.hgrow="ALWAYS">
                    <HBox spacing="8" alignment="CENTER_LEFT">
                        <Label text="ðŸ—„ï¸" style="-fx-font-size: 16px;"/>
                        <Label text="SQL Server" style="-fx-font-weight: 600;"/>
                    </HBox>
                    <Label text="Microsoft SQL Server" styleClass="form-hint"/>
                </VBox>
                <VBox spacing="4" HBox.hgrow="ALWAYS">
                    <HBox spacing="8" alignment="CENTER_LEFT">
                        <Label text="ðŸ¬" style="-fx-font-size: 16px;"/>
                        <Label text="MySQL" style="-fx-font-weight: 600;"/>
                    </HBox>
                    <Label text="Popular open source database" styleClass="form-hint"/>
                </VBox>
            </HBox>
        </VBox>
        
    </VBox>
</VBox>

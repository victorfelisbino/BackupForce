<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" 
            fx:controller="com.backupforce.ui.BackupController"
            styleClass="mica-background"
            stylesheets="@../css/windows11-dark.css">
    
    <!-- Top Section: Connection Info -->
    <top>
        <VBox spacing="12" style="-fx-padding: 16;">
            <!-- Header Card -->
            <VBox spacing="12" styleClass="header-section">
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <!-- Connection Status Indicator -->
                    <Region styleClass="connection-status-dot"/>
                    <Label fx:id="connectionLabel" text="Connected to Salesforce" styleClass="connection-label" HBox.hgrow="ALWAYS"/>
                    <Button fx:id="logoutButton" text="Logout" onAction="#handleLogout" 
                           styleClass="secondary-button" 
                           style="-fx-padding: 6px 16px; -fx-font-size: 13px;"/>
                </HBox>
            </VBox>
        </VBox>
    </top>
    
    <!-- Center: Object Selection and Status -->
    <center>
        <VBox spacing="12" style="-fx-padding: 0 16 12 16;">
            
            <!-- Search and Controls Bar -->
            <HBox spacing="12" alignment="CENTER_LEFT">
                <TextField fx:id="searchField" promptText="ðŸ” Search objects..." 
                          prefWidth="340" styleClass="search-field"/>
                <Label fx:id="selectionCountLabel" text="0 objects selected" 
                       styleClass="caption" style="-fx-padding: 0 8;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button fx:id="selectAllButton" text="Select All" onAction="#handleSelectAll" 
                       styleClass="secondary-button"/>
                <Button fx:id="deselectAllButton" text="Clear" onAction="#handleDeselectAll" 
                       styleClass="secondary-button"/>
            </HBox>
            
            <!-- Selection Table (shown before backup) -->
            <TableView fx:id="allObjectsTable" VBox.vgrow="ALWAYS" styleClass="object-table">
                <columns>
                    <TableColumn fx:id="allSelectColumn" text="Select" prefWidth="60" 
                                minWidth="60" maxWidth="60"/>
                    <TableColumn fx:id="allNameColumn" text="Object Name" prefWidth="200" 
                                minWidth="150"/>
                    <TableColumn fx:id="allLabelColumn" text="Label" prefWidth="200" 
                                minWidth="150"/>
                    <TableColumn fx:id="allStatusColumn" text="Status" prefWidth="250" 
                                minWidth="150"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
            
            <!-- Status Tabs (shown during/after backup) -->
            <TabPane fx:id="statusTabPane" VBox.vgrow="ALWAYS" tabClosingPolicy="UNAVAILABLE" 
                     visible="false" managed="false">
                <!-- All Objects Tab -->
                <Tab text="All Objects" closable="false">
                    <TableView fx:id="allStatusTable">
                        <columns>
                            <TableColumn fx:id="statusAllNameColumn" text="Object Name" prefWidth="220" 
                                        minWidth="180"/>
                            <TableColumn fx:id="statusAllLabelColumn" text="Label" prefWidth="220" 
                                        minWidth="180"/>
                            <TableColumn fx:id="statusAllStatusColumn" text="Status" prefWidth="380" 
                                        minWidth="250"/>
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                        </columnResizePolicy>
                    </TableView>
                </Tab>
                
                <!-- In Progress Tab -->
                <Tab text="â³ In Progress" closable="false">
                    <TableView fx:id="inProgressTable">
                        <columns>
                            <TableColumn fx:id="progressNameColumn" text="Object Name" prefWidth="220" 
                                        minWidth="180"/>
                            <TableColumn fx:id="progressStatusColumn" text="Status" prefWidth="450" 
                                        minWidth="300"/>
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                        </columnResizePolicy>
                    </TableView>
                </Tab>
                
                <!-- Completed Tab -->
                <Tab text="âœ“ Completed" closable="false">
                    <TableView fx:id="completedTable">
                        <columns>
                            <TableColumn fx:id="completedNameColumn" text="Object Name" prefWidth="220" 
                                        minWidth="180"/>
                            <TableColumn fx:id="completedRecordsColumn" text="Records" prefWidth="120" 
                                        minWidth="100"/>
                            <TableColumn fx:id="completedSizeColumn" text="Size" prefWidth="100" 
                                        minWidth="80"/>
                            <TableColumn fx:id="completedTimeColumn" text="Duration" prefWidth="100" 
                                        minWidth="80"/>
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                        </columnResizePolicy>
                    </TableView>
                </Tab>
                
                <!-- Errors Tab -->
                <Tab text="âš  Errors" closable="false">
                    <TableView fx:id="errorsTable">
                        <columns>
                            <TableColumn fx:id="errorNameColumn" text="Object Name" prefWidth="220" 
                                        minWidth="180"/>
                            <TableColumn fx:id="errorMessageColumn" text="Error Message" prefWidth="520" 
                                        minWidth="300"/>
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                        </columnResizePolicy>
                    </TableView>
                </Tab>
            </TabPane>
        </VBox>
    </center>
    
    <!-- Bottom: Output Folder, Progress, and Controls -->
    <bottom>
        <VBox spacing="15" styleClass="bottom-section">
            <padding>
                <Insets top="10" right="15" bottom="15" left="15"/>
            </padding>
            
            <Separator/>
            
            <!-- Backup Target Selection -->
            <VBox spacing="12" styleClass="config-card">
                <Label text="Backup Destination" styleClass="section-label"/>
                
                <HBox spacing="24" alignment="CENTER_LEFT" style="-fx-padding: 4 0 0 0;">
                    <RadioButton fx:id="csvRadioButton" text="CSV Files" selected="true" 
                                styleClass="modern-radio">
                        <toggleGroup>
                            <ToggleGroup fx:id="backupTargetGroup"/>
                        </toggleGroup>
                    </RadioButton>
                    <RadioButton fx:id="databaseRadioButton" text="Database" 
                                toggleGroup="$backupTargetGroup" styleClass="modern-radio"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button fx:id="databaseSettingsButton" text="âš™ Database Settings" 
                           onAction="#handleDatabaseSettings" 
                           styleClass="secondary-button" disable="true"
                           style="-fx-padding: 6px 14px; -fx-font-size: 13px;"/>
                </HBox>
            </VBox>
            
            <!-- Output Folder Selection -->
            <VBox spacing="10" styleClass="config-card" fx:id="outputFolderBox">
                <Label text="Output Folder" styleClass="section-label"/>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <TextField fx:id="outputFolderField" HBox.hgrow="ALWAYS" 
                              styleClass="modern-text-field"
                              promptText="Select backup destination folder..."/>
                    <Button fx:id="browseButton" text="ðŸ“ Browse" onAction="#handleBrowse" 
                           styleClass="secondary-button"
                           style="-fx-padding: 8px 16px; -fx-font-size: 13px;"/>
                </HBox>
            </VBox>
            
            <!-- Progress Section -->
            <VBox spacing="10" styleClass="progress-card">
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label fx:id="progressLabel" text="Ready to start backup" styleClass="progress-label" 
                           HBox.hgrow="ALWAYS"/>
                    <Label fx:id="progressPercentLabel" text="0%" styleClass="progress-percent"/>
                </HBox>
                <ProgressBar fx:id="progressBar" maxWidth="Infinity" prefHeight="6" 
                            styleClass="modern-progress" progress="0"/>
            </VBox>
            
            <!-- Action Buttons -->
            <HBox spacing="12" alignment="CENTER_RIGHT" style="-fx-padding: 8 0 0 0;">
                <Button fx:id="startBackupButton" text="â–¶ Start Backup" onAction="#handleStartBackup" 
                       prefWidth="160" prefHeight="38" styleClass="primary-button"
                       style="-fx-font-size: 14px; -fx-font-weight: 600;"/>
                <Button fx:id="stopBackupButton" text="â¹ Stop Backup" onAction="#handleStopBackup" 
                       prefWidth="160" prefHeight="38" styleClass="danger-button"
                       style="-fx-font-size: 14px; -fx-font-weight: 600;"/>
                <Button fx:id="exportResultsButton" text="ðŸ’¾ Export Results" onAction="#handleExportResults" 
                       prefWidth="160" prefHeight="38" styleClass="success-button" disable="true"
                       style="-fx-font-size: 14px; -fx-font-weight: 600;"/>
            </HBox>
            
            <!-- Log Area -->
            <VBox spacing="8" styleClass="config-card">
                <Label text="Activity Log" styleClass="section-label"/>
                <TextArea fx:id="logArea" prefHeight="110" editable="false" 
                         wrapText="true" styleClass="log-area">
                    <font>
                        <Font name="Consolas" size="11"/>
                    </font>
                </TextArea>
            </VBox>
            
            <!-- Attribution Footer -->
            <HBox alignment="CENTER" style="-fx-padding: 16 0 0 0;">
                <Label text="Developed by Victor Felisbino â€¢ BackupForce v2.0" 
                      style="-fx-font-size: 11px; -fx-text-fill: #8b8b8b;"/>
            </HBox>
        </VBox>
    </bottom>
    
</BorderPane>
